{
  "name": "native-color-picker",
  "version": "1.1.0",
  "description": "Color picker for React Native",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/native-color-picker.min.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint --fix 'src/**/*.tsx'",
    "prettier": "prettier --write 'src/**/*.tsx'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/native-color-picker.git"
  },
  "keywords": [
    "TypeScript",
    "React",
    "React Native",
    "colors",
    "picker"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/native-color-picker/issues"
  },
  "homepage": "https://github.com/JB1905/native-color-picker#readme",
  "dependencies": {
    "color": "^3.1.2",
    "color-sort": "^0.0.1",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/expo": "^32.0.13",
    "@types/expo__vector-icons": "^9.0.1",
    "@types/react": "^16.9.1",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-native": "^3.7.0",
    "expo-linear-gradient": "^6.0.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
