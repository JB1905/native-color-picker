{
  "name": "native-color-picker",
  "version": "1.3.1",
  "description": "Color picker for React Native",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/native-color-picker.cjs.js",
  "module": "lib/native-color-picker.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint --fix 'src/**/*.{tsx,ts}'",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/native-color-picker.git"
  },
  "keywords": [
    "TypeScript",
    "React",
    "React Native",
    "colors",
    "picker"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/native-color-picker/issues"
  },
  "homepage": "https://github.com/JB1905/native-color-picker#readme",
  "dependencies": {
    "color": "^3.1.2",
    "color-sort": "^0.0.1",
    "expo-linear-gradient": "^8.0.0",
    "react-native-vector-icons": "^6.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/color": "^3.0.1",
    "@types/react": "^16.9.19",
    "@types/react-native-vector-icons": "^6.4.5",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-native": "^3.8.1",
    "husky": "^4.2.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-native": "^0.61.5",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
