  "license": "MIT",
  "main": "lib/native-color-picker.min.js",
  "scripts": {
    "release": "npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "test": "mocha -r @babel/register --exit",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:test": "mocha -r @babel/register --watch",
    "lint": "eslint --fix './src/**/*.tsx'",
    "prettier": "prettier --write 'src/**/*.tsx'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/native-color-picker.git"
  },
  "keywords": [
    "TypeScript",
    "React",
    "React Native",
    "colors",
    "picker"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/native-color-picker/issues"
  },
  "homepage": "https://github.com/JB1905/native-color-picker#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-add-module-exports": "^1.0.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "expo": "^32.0.0",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "styled-components": "^4.1.3",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2",
    "webpack": "^5.0.0-alpha.5",
    "webpack-cli": "^3.2.1"
  },
  "peerDependencies": {
    "react": ">=16.3.0",
    "expo": ">=30.0.0"
  }
}
