{
  "name": "native-color-picker",
  "version": "1.3.6-beta.0",
  "description": "Color picker for React Native (Expo projects only)",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/native-color-picker.cjs.js",
  "module": "lib/native-color-picker.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint --fix 'src/**/*.{tsx,ts}'",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/native-color-picker.git"
  },
  "keywords": [
    "TypeScript",
    "React",
    "React Native",
    "colors",
    "picker"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/native-color-picker/issues"
  },
  "homepage": "https://github.com/JB1905/native-color-picker#readme",
  "dependencies": {
    "color": "^3.1.3",
    "color-sort": "^0.0.1",
    "expo-linear-gradient": "^8.4.0",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-vector-icons": "^7.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@types/color": "^3.0.1",
    "@types/react": "^17.0.0",
    "@types/react-native-vector-icons": "^6.4.6",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-native": "^3.10.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^16.13.1",
    "react-native": "^0.62.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
